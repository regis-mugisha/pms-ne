generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        Int    @id @default(autoincrement())
  firstName String
  lastName  String
  email     String @unique
  password  String
  role      Role
}

enum Role {
  ADMIN
  DRIVER
}

model Parking {
  id              Int    @id @default(autoincrement())
  code            String @unique
  name            String
  availableSpaces Int
  location        String
  feePerHour      Float
  cars            Car[]
}

model Car {
  id          Int       @id @default(autoincrement())
  plateNumber String
  entryTime   DateTime
  exitTime    DateTime?
  charged     Float     @default(0)
  parking     Parking   @relation(fields: [parkingCode], references: [code])
  parkingCode String
}
